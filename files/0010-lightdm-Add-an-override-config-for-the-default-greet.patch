From 6050358d910a9927e5364feff94970ff5a47a026 Mon Sep 17 00:00:00 2001
From: Ikey Doherty <ikey@solus-project.com>
Date: Sun, 16 Oct 2016 14:27:29 +0100
Subject: [PATCH 10/10] lightdm: Add an override config for the default greeter
 wallpaper

Signed-off-by: Ikey Doherty <ikey@solus-project.com>
---
 lightdm/20_mate_default.conf | 2 ++
 lightdm/Makefile.am          | 7 ++++++-
 2 files changed, 8 insertions(+), 1 deletion(-)
 create mode 100644 lightdm/20_mate_default.conf

diff --git a/lightdm/20_mate_default.conf b/lightdm/20_mate_default.conf
new file mode 100644
index 0000000..f0d1cbc
--- /dev/null
+++ b/lightdm/20_mate_default.conf
@@ -0,0 +1,2 @@
+[greeter]
+background=/usr/share/backgrounds/solus/Excl_Lonely_Railway.jpg
diff --git a/lightdm/Makefile.am b/lightdm/Makefile.am
index ab89560..f417296 100644
--- a/lightdm/Makefile.am
+++ b/lightdm/Makefile.am
@@ -1,6 +1,11 @@
 EXTRA_DIST = \
-	20_mate_config.conf
+	20_mate_config.conf \
+	20_mate_default.conf
 
 lightdmdir = $(datadir)/lightdm/lightdm.conf.d
 lightdm_DATA = \
 	20_mate_config.conf
+
+lightdm_gtkdir = $(datadir)/lightdm/lightdm-gtk-greeter.conf.d
+lightdm_gtk_DATA = \
+	20_mate_default.conf
